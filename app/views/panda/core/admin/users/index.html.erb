<%= render Panda::Core::Admin::ContainerComponent.new do |component| %>
  <% component.with_heading_slot(text: "Users", level: 1) %>

  <% if @users.any? %>
    <%= render Panda::Core::Admin::TableComponent.new(term: "user", rows: @users, icon: "users") do |table| %>
      <% table.column("User", width: "35%") do |user| %>
        <div class="flex items-center gap-3">
          <% if user.avatar.attached? %>
            <%= image_tag main_app.url_for(user.avatar.variant(:thumb)), alt: user.name, class: "h-10 w-10 rounded-full object-cover" %>
          <% elsif user.image_url.present? %>
            <img src="<%= user.image_url %>" alt="<%= user.name %>" class="h-10 w-10 rounded-full object-cover">
          <% else %>
            <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
              <i class="fa-solid fa-user text-gray-400 dark:text-gray-300"></i>
            </div>
          <% end %>
          <div>
            <div class="font-medium text-gray-900 dark:text-white"><%= user.name %></div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></div>
          </div>
        </div>
      <% end %>
      <% table.column("Role", width: "20%") do |user| %>
        <% if user.admin? %>
          <span class="inline-flex items-center rounded-md bg-primary-50 px-2 py-1 text-xs font-medium text-primary-700 ring-1 ring-inset ring-primary-600/20 dark:bg-primary-500/10 dark:text-primary-400 dark:ring-primary-500/20">
            <i class="fa-solid fa-shield mr-1"></i> Admin
          </span>
        <% else %>
          <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10 dark:bg-gray-400/10 dark:text-gray-400 dark:ring-gray-400/20">
            User
          </span>
        <% end %>
      <% end %>
      <% table.column("Joined", width: "25%") do |user| %>
        <span class="text-sm text-gray-500 dark:text-gray-400"><%= l(user.created_at, format: :long) %></span>
      <% end %>
      <% table.column("", width: "20%") do |user| %>
        <div class="flex justify-end gap-2">
          <%= link_to edit_admin_user_path(user), class: "text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300" do %>
            <i class="fa-solid fa-pencil"></i> Edit
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <i class="fa-solid fa-users text-4xl text-gray-300 dark:text-gray-600 mb-3"></i>
      <p class="text-gray-500 dark:text-gray-400">No users found.</p>
    </div>
  <% end %>
<% end %>
