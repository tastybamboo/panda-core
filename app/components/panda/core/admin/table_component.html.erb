<% if rows.any? %>
  <%# Table with rows %>
  <div class="mb-12 w-full overflow-x-auto rounded-2xl border border-gray-200 bg-white" data-controller="row-link" data-action="click->row-link#click">
    <%# Header %>
    <div class="table w-full" style="table-layout: fixed;">
      <div class="table-header-group">
        <div class="table-row text-sm font-medium text-gray-500 truncate bg-gray-50 border-b border-gray-200">
        <% columns.each do |column| %>
          <% header_style = column.width ? "width: #{column.width};" : nil %>
          <div class="table-cell sticky top-0 z-10 px-4 py-3 align-middle" style="<%= header_style %>">
            <%= column.label %>
          </div>
        <% end %>
        </div>
      </div>

      <%# Rows %>
       <div class="table-row-group">
         <% rows.each do |row| %>
           <div class="table-row odd:bg-white even:bg-gray-50/60 hover:bg-gray-100 cursor-pointer" data-<%= term %>-id="<%= row.id %>">
             <% columns.each do |column| %>
              <div class="table-cell px-4 py-3 text-sm align-middle break-words border-b border-gray-200/70 text-gray-600">
                <%= render_cell_content(row, column.cell) %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <%# Empty state %>
  <%= render Panda::Core::Admin::EmptyStateComponent.new(
    title: "No #{term.pluralize}",
    description: "Get started by creating a new #{term}.",
    icon: icon
  ) %>
<% end %>
