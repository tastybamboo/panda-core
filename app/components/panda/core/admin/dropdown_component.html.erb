<div <%= tag.attributes(**attrs) %>
     data-controller="dropdown"
     data-action="click@window->dropdown#hide keydown.escape@window->dropdown#hide">
  <button type="button"
          data-action="click->dropdown#toggle"
          data-dropdown-target="button"
          class="inline-flex items-center gap-1 text-gray-400 hover:text-gray-600 focus:outline-none"
          aria-haspopup="true">
    <% if trigger_slot? %>
      <%= trigger_slot %>
    <% else %>
      <%= chevron_icon %>
    <% end %>
  </button>

  <div data-dropdown-target="menu"
       class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-lg bg-white shadow-lg ring-1 ring-black/5 focus:outline-none"
       data-transition-enter="transition ease-out duration-100"
       data-transition-enter-from="transform opacity-0 scale-95"
       data-transition-enter-to="transform opacity-100 scale-100"
       data-transition-leave="transition ease-in duration-75"
       data-transition-leave-from="transform opacity-100 scale-100"
       data-transition-leave-to="transform opacity-0 scale-95"
       role="menu"
       aria-orientation="vertical">
    <div class="py-1" role="none">
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    </div>
  </div>
</div>
